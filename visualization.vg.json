{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 200,
  "title": {"text": "ข้อมูลฝุ่น PM10", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Maplub/AirQualityData/master/PM10_2018_daily.csv",
      "format": {"type": "csv", "parse": {"time": "date"}, "delimiter": ","},
      "transform": [
        {
          "field": "time",
          "type": "timeunit",
          "units": ["day"],
          "as": ["day_time", "day_time_end"]
        },
        {
          "type": "aggregate",
          "groupby": ["day_time", "day_time_end", "id 2"],
          "ops": ["mean"],
          "fields": ["pm10"],
          "as": ["mean_pm10"]
        },
        {
          "type": "filter",
          "expr": "(isDate(datum[\"day_time\"]) || (isValid(datum[\"day_time\"]) && isFinite(+datum[\"day_time\"]))) && isValid(datum[\"mean_pm10\"]) && isFinite(+datum[\"mean_pm10\"])"
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 13},
    {"name": "height", "update": "bandspace(domain('y').length, 0, 0) * y_step"}
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["rect"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "mean_pm10"},
          "description": {
            "signal": "\"time (day): \" + (timeFormat(datum[\"day_time\"], timeUnitSpecifier([\"day\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; id 2: \" + (isValid(datum[\"id 2\"]) ? datum[\"id 2\"] : \"\"+datum[\"id 2\"]) + \"; Mean of pm10: \" + (format(datum[\"mean_pm10\"], \"\"))"
          },
          "x2": {"scale": "x", "field": "day_time", "offset": 0.5},
          "x": {"scale": "x", "field": "day_time_end", "offset": 0.5},
          "y": {"scale": "y", "field": "id 2"},
          "height": {"scale": "y", "band": 1}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "source_0", "fields": ["day_time", "day_time_end"]},
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "band",
      "domain": {"data": "source_0", "field": "id 2", "sort": true},
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_0", "field": "mean_pm10"},
      "range": "heatmap",
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "time (day)",
      "format": {
        "signal": "timeUnitSpecifier([\"day\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"})"
      },
      "labelFlush": true,
      "labelOverlap": true,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "id 2",
      "zindex": 1
    }
  ],
  "legends": [
    {"fill": "color", "gradientLength": {"signal": "clamp(height, 64, 200)"}}
  ],
  "config": {"axis": {"domain": false}, "style": {"cell": {"strokeWidth": 0}}}
}